<!DOCTYPE html>
<html lang="en" ng-app ="myApp">
<head>
    <title>Challenge&Play</title>
    <% include templates/head %>
    <!-- Material Design Bootstrap -->
    <link href="css/table.css" rel="stylesheet">
    <!-- Checkbox -->
    <link href="css/checkbox_switch.css" rel="stylesheet">

    <style type="text/css">
        img { width: 140px; height: 140px; border-radius: 50%!important }
    </style>

</head>

<body>

    <header>
      <% include templates/header %>
    </header>

    <main>
        <div class="col-sm-12 en-medio">
                    <div>
                      <% if ( registrado != null ) { %>
                        <% if ( registrado == true ) { %>
                         <div class = "row">
                             <div class="col-sm-12 alert alert-success">
                               <button type="button" class="close" data-dismiss="alert">&times;</button>
                               <strong>Registro Correcto</strong>  <!--p><p><!--%= message %> <!--%= error.status %><pre><!--%= error.stack %></pre></p-->
                             </div>
                          </div>
                         <% }else{ %>
                            <div class = "row">
                             <div class="col-sm-12 alert alert-danger alert-dismissable">
                               <button type="button" class="close" data-dismiss="alert">&times;</button>
                               <strong>Registro Incorrecto</strong>  <!--p><p><!--%= message %> <!--%= error.status %><pre><!--%= error.stack %></pre></p-->
                             </div>
                           </div>
                       <% } %>
                     <% } %>
                        <form class="form-nueva-clase" method="POST" action="/registro_reto">
                          <div class="row">
                            <div class="col-sm-4">
                              <h3>Nuevo reto</h3>
                              <div class="form-group">
                                <input type="name" class="form-control" id="nombre_reto" name="nombre_reto" placeholder="Nombre del reto">
                              </div>
                              <div class="form-group">
                                  <label id="reto">
                                      Nombre de la Clase :
                                  </label>   
                                  <select id="nombre_clase" name="nombre_clase" >
                                      <% for (var i=0; i < data.length; i++) {%>
                                         <option value=<%= data[i].clase.nombre_clase %>>
                                           <%= data[i].clase.nombre_clase %></option>
                                      <% }%>
                                  </select>
                              </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Matemáticas</h4>
                                <div class="panel-body">
                                    <div class="checkbox checbox-switch switch-danger">
                                      <label id="reto">
                                        <input type="checkbox" name="check" value="suma" id="reto-1"/>
                                        <span></span>
                                        Suma
                                      </label>
                                    </div>

                                    <div class="checkbox checbox-switch switch-danger">
                                      <label id="reto">
                                        <input type="checkbox" name="check" value="multiplicar" id="reto-2"/>
                                        <span></span>
                                        Multiplicar
                                      </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Geografía</h4>
                              <div class="panel-body">
                                  <div class="checkbox checbox-switch switch-success">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="capitales" id="reto-3"/>
                                      <span></span>
                                      Capitales
                                    </label>
                                  </div>

                                  <div class="checkbox checbox-switch switch-success">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="banderas" value="articulos" id="reto-4"/>
                                      <span></span>
                                      Banderas
                                    </label>
                                  </div>
                              </div>
                            </div>
                          </div> <!-- FIN ROW 1 -->
                          <br>
                          <div class="row">
                            <div class="col-sm-4">
                              <h4>Lenguaje</h4>
                              <div class="panel-body">
                                  <div class="checkbox checbox-switch switch-primary">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="articulos" id="reto-5"/>
                                      <span></span>
                                      Artículos
                                    </label>
                                  </div>
                              </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Química</h4>
                                <div class="panel-body">
                                    <div class="checkbox checbox-switch switch-warning">
                                      <label id="reto">
                                        <input type="checkbox" name="check" value="tp" id="reto-6"/>
                                        <span></span>
                                        Tabla Perdiódica
                                      </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Astronomía</h4>
                              <div class="panel-body">
                                  <div class="checkbox checbox-switch switch-dark">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="planetas" id="reto-7"/>
                                      <span></span>
                                      Planetas
                                    </label>
                                  </div>
                              </div>
                            </div>
                          </div> <!-- FIN ROW 2 -->
                          <br>
                          <div class="row">
                            <div class="col-sm-4">
                              <h4>Inglés</h4>
                                <div class="panel-body">
                                    <div class="checkbox checbox-switch switch-warning">
                                      <label id="reto">
                                        <input type="checkbox" name="check" value="ingles" id="reto-8"/>
                                        <span></span>
                                        Inglés
                                      </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Historia</h4>
                              <div class="panel-body">
                                  <div class="checkbox checbox-switch switch-dark">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="historia" id="reto-9"/>
                                      <span></span>
                                      Historia
                                    </label>
                                  </div>
                              </div>
                            </div>
                            <div class="col-sm-4">
                              <h4>Personalizado</h4>
                              <div class="panel-body">
                                  <div class="checkbox checbox-switch switch-danger">
                                    <label id="reto">
                                      <input type="checkbox" name="check" value="test" id="reto-10"/>
                                      <span></span>
                                      Test
                                    </label>
                                  </div>
                              </div>
                            </div>
                          </div> <!-- FIN ROW 3 -->
                          <br>
                          <button type="submit" class="btn red">ENVIAR</button>
                        </form>
                    </div>
        </div>
    </main>

<!--Footer-->

<footer class="page-footer center-on-small-only" style="position: relative; bottom:0px;width:100%;z-index:10">
  <% include templates/footer %>
</footer>

<!--/.Footer-->

  <!-- SCRIPTS -->
    <% include templates/scripts %>
    <script type="text/javascript" src="js/jquery.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
        $('input[type=checkbox]').live('click', function(){
            var parent = $(this).parent().attr('id');
            $('#'+parent+' input[type=checkbox]').removeAttr('checked');
            $(this).attr('checked', true);
        });
    });
    </script>
  <!-- /.SCRIPTS -->

</body>
</html>
