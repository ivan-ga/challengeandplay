<!DOCTYPE html>
<html lang="en" ng-app='myApp'>

<head>
    <title>Proyecto-SYTW - Login</title>
    <% include templates/head %>

        <style type="text/css">

.radio-pink [type="radio"]:checked+label:after {
    border-color: #e91e63;
    background-color: #e91e63;
}
/*Gap*/

.radio-pink-gap [type="radio"].with-gap:checked+label:before {
    border-color: #e91e63;
}

.radio-pink-gap [type="radio"]:checked+label:after {
    border-color: #e91e63;
    background-color: #e91e63;
}
  </style>


</head>

<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-toggleable-md navbar-dark">
            <!-- <div class="container"> -->
                <!-- <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1" aria-expanded="false" aria-label="Toggle navigation">
                         <span class="navbar-toggler-icon"></span>
                </button> -->
                <a class="text-dark" href="#">Challenge<strong class="text-red">&</strong>Play</a>
            <!-- </div> -->
        </nav>
        <!--/.Navbar-->
    </header>
    <!--Main layout-->
    <main>
        <div class="container">
            <!--Page heading-->
            <div class="row">
                <div id="carouselExampleIndicators" class="carousel slide col-md-4" data-interval="2000" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="img/3_en_rayas_violeta.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="img/ajedrez_violeta.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="img/buscaminas_violetas.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="img/damas_violetas.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                             <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                             <span class="sr-only">Previous</span>
                        </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                             <span class="carousel-control-next-icon" aria-hidden="true"></span>
                             <span class="sr-only">Next</span>
                        </a>
                </div>
                <div class="col-md-8 ng-scope ng-building" ng-controller="controladorConMetodos as fo">
                    <div class="omb_login">
                        <div>
                            <div>
                                <h3 class="omb_authTitle"><a href="" ng-click="ShowRetroceder()">
                                         Login</a> or <a href="" ng-click="ShowForm()">Sign up</a></h3>
                            </div>
                            <div ng-hide="form">
                                <div class="row omb_row-sm-offset-3 omb_loginOr">
                                    <div class="col-xs-12 col-sm-9">
                                        <hr class="omb_hrOr">
                                        <span class="omb_spanOr">or</span>
                                    </div>
                                </div>
                                <div class="row omb_row-sm-offset-3">
                                    <div class="col-xs-12 col-sm-9">
                                        <form class="omb_loginForm" method="POST" action="/login">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                <input required type="text" ng-model="fo.login.username" class="form-control" name="username" placeholder="Nombre Usuario">
                                            </div>
                                            <span class="help-block"></span>

                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                                <input required type="password" class="form-control" ng-model="fo.login.password" name="password" placeholder="Password">
                                            </div>
                                            </br>
                                            <button class="btn btn-lg btn-primary btn-block" value="Log in" type="submit">Login</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Login-->
                        <div>
                            <div class="omb_login" ng-style="estilos" style="display: none;" ng-show="form">
                                <div class="row omb_row-sm-offset-3 omb_loginOr">
                                    <div class="col-xs-12 col-sm-9">
                                        <hr class="omb_hrOr"><span class="omb_spanOr">or</span>
                                    </div>
                                </div>
                                <div class="row omb_row-sm-offset-3">
                                    <div class="col-xs-12 col-sm-9">
                                        <form class="omb_loginForm pure-form" method="POST" action="/registro">
                                            <div class="row" >
                                                <span class="col-md-5 col-md-offset-1">Seleci√≥n de Perfil: </span>
                                                <div class="radio col-md-3 radio-pink-gap">
                                                  <label><input type="radio" ng-model="fo.registro.tipo" name="optradio" value="profesor" required>Profesor</label>
                                                </div>
                                                <div class="radio col-md-3">
                                                  <label><input  type="radio" ng-model="fo.registro.tipo"  name="optradio" value="alumno" >Alumno</label>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="input-group">
                                                    <span class="input-group-addon col-md-1 col-md-offset-2 text-center"><i class="fa fa-user"></i></span>
                                                    <input type="text" class="form-control col-md-3 col-md-offset-3" ng-model="fo.registro.username" name="username" id="username" placeholder="Username" required>
                                                     <!--Pones email en type-->
                                                     <span class="input-group-addon col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o"></i></span>
                                                    <input type="text" class="form-control" ng-model="fo.registro.email" name="email" id="email" placeholder="email" required>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="input-group">
                                                    <span class="input-group-addon col-md-1 col-md-offset-2 text-center"><i class="fa fa-user"></i></span>
                                                    <input type="text" class="form-control" ng-model="fo.registro.name" name="name" id="name" placeholder="Nombre" required>

                                                     <span class="input-group-addon col-md-1 col-md-offset-2 text-center"><i class="fa fa-user"></i></span>
                                                    <input type="text" class="form-control" ng-model="fo.registro.apellidos" name="apellidos" id="apellidos" placeholder="Apellidos" required>
                                                </div>
                                            </div>
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                                <input type="password" class="form-control" ng-model="fo.registro.password" name="password" placeholder="Password" id="password" required>
                                            </div>
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                                <input type="password" class="form-control" ng-model="fo.registro.passwordh" name="passwordh" placeholder="Repite tu password" id="confirm_password" required>
                                            </div>
                                            </br>
                                            <button class="btn btn-lg btn-primary btn-block pure-button pure-button-primary" value="Log in" type="submit" >Registrarse</button>
                                        </form>
                                        <div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row omb_row-sm-offset-3">
                                    <div class="col-xs-12 col-sm-3">
                                    </div>
                                    <div class="col-xs-12 col-sm-3">
                                        <p class="omb_forgotPwd">
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!--/.Main layout-->

    <!--Footer>
    <footer class="page-footer center-on-small-only">
        <% include templates/footer %>
    </footer>
    <!--/.Footer-->

    <!-- SCRIPTS -->
    <% include templates/scripts %>

    <script type="text/javascript" src="js/indexControllers.js"></script>
    <script type="text/javascript" src="js/index.js"></script>
    <!-- /.SCRIPTS -->

</body>

</html>
