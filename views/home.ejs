<!DOCTYPE html>
<html lang="en" ng-app ="myApp">
<head>
    <title>Challenge&Play</title>
    <% include templates/head %>
    <!-- Material Design Bootstrap -->
    <link href="css/table.css" rel="stylesheet">

    <style type="text/css">
        img { width: 140px; height: 140px; border-radius: 50%!important }
    </style>

</head>

<body>

    <header>
      <% include templates/header %>
    </header>

    <main>
        <div class="col-sm-12 en-medio">
          <div class="text-center">
            <div class="row">
                <div class="col-sm-4 offset-1 ">
                    <div class="">
                        <img src="img/uploads/<%=user.id%>.jpg" class="img-circle" onerror="this.src='https://avatars.io/gravatar/<%= user.usuario.username %>/140'"><br>
                        <strong>Nombre</strong>: <%= user.usuario.username %><br><br><br>
                        <strong>Cambiar imagen de perfil:</strong>
                        <br>
                        <% if ( expressFlash.length > 0 ) { %>
                            <p><strong><%= expressFlash %></strong></p>
                        <% } %>
                         <form id="uploadForm" enctype="multipart/form-data" action="/home" method="post">
        		            <input type="file" name="userFile" />
        		            <br>
        		            <br>
        		            <input type="submit" value="Subir archivo" name="submit" onsubmit="setTimeout(function () { window.location.reload(); }, 10)">
        	             </form>
                    </div>
                </div>
                
                <div class="col-sm-7">
                    <table class="table-responsive">
                        <tr>
                             <th>Juego</th>
                             <th>Totales</th>
                             <th>Ganadas</th>
                             <th>Perdidas</th>
                             <th>Empatadas</th>
                        </tr>
                        <tr>
                             <td>3 en raya</td>
                             <td><%= user.usuario.totales_3enraya%> </td>
                             <td><%= user.usuario.ganadas_3enraya %></td>
                             <td><%= user.usuario.perdidas_3enraya %></td>
                             <td><%= user.usuario.empatadas_3enraya %></td>
                        </tr>
                        <tr>
                             <td>Ajedrez</td>
                             <td><%= user.usuario.totales_ajedrez%> </td>
                             <td><%= user.usuario.ganadas_ajedrez %></td>
                             <td><%= user.usuario.perdidas_ajedrez %></td>
                             <td><%= user.usuario.empatadas_ajedrez %></td>
                        </tr>
                        <tr>
                             <td>Buscaminas</td>
                             <td><%= user.usuario.totales_buscaminas%> </td>
                             <td><%= user.usuario.ganadas_buscaminas %></td>
                             <td><%= user.usuario.perdidas_buscaminas %></td>
                             <td align="center">-</td>
                        </tr>
                        <tr>
                             <td>Damas</td>
                             <td><%= user.usuario.totales_damas%> </td>
                             <td><%= user.usuario.ganadas_damas %></td>
                             <td><%= user.usuario.perdidas_damas %></td>
                             <td align="center">-</td>
                        </tr>
                      </table>
                </div>
            </div>
          </div>
        </div>
    </main>

<!--Footer-->

<footer class="page-footer center-on-small-only">
  <% include templates/footer %>
</footer>

<!--/.Footer-->

  <!-- SCRIPTS -->
  <% include templates/scripts %>
  <!-- /.SCRIPTS -->

</body>
</html>
