<!DOCTYPE html>
<html lang="en" ng-app='myApp'>
<head>
    <title>Proyecto-SYTW</title>
    <% include templates/head %>
</head>

<body>

    <header>
      <% include templates/header %>
    </header>

    <main>
        <div class="container">
            <div class="row">
                <div class="offset-1 col-md-7">
                    <h1>Clases</h1>
                    <ul class="users">
                    <table class="table table-hover border-dark table-bordered table-stripe">
                        <thead>
                            <tr>
                                <th scope="col" data-priority="1">Nombre</th>
                                <th scope="col" data-priority="2">Curso</th>
                                <th scope="col" data-priority="4">Nº de alumnos</th>
                                <th scope="col" data-priority="3">Retos realizados</th>
                            </tr>
                        </thead>
                        <tbody>
                             <% for (var i=0; i < data.length; i++) {%>
                                <tr class="table-info">
                                         <td><%= data[i].clase.nombre_clase %> </td>
                                         <td><a><%=  data[i].clase.curso %></a></td>                       
                                         <td><a><%=  data[i].clase.alumnos_email.length %></a></td>
                                         <td><a><%=  data[i].clase.retos.length %></a></td>   
                              <% } %> </tr>
                        </tbody>
                    </table>
                </div>
                <div class="offset-1 col-md-3 ">
                    <img src="http://www.mrgff.org/wp-content/uploads/EDU.jpg" class="img-fluid" alt="Responsive image">
                    <a href="/form_clase">Añadir Nueva Clase<a/>
                </div>
            </div>
        </div>
    </main>

    <!--Footer-->
    <footer class="page-footer center-on-small-only" style="position: fixed; bottom:0px;width:100%;z-index:10">
      <% include templates/footer %>
    </footer>
    <!--/.Footer-->

    <!-- SCRIPTS -->
    <% include templates/scripts %>
    <!-- /.SCRIPTS -->

</body>

</html>
