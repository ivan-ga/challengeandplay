<script>
function comienzo() {

//--- start example JS ---
var board;
game = new Chess();

// do not pick up pieces if the game is over
// only pick up pieces for White

function enviadatos_gan(){
		window.location = "/actualizar?ganadas_ajedrez=1";
		alert("You WIN")
		return true;


}

function enviadatos_per(){
		window.location = "/actualizar?perdidas_ajedrez=1";
		console.log("It's a tie");
		return true;

}


function enviadatos_empat(){
		window.location = "/actualizar?empatadas_ajedrez=1";
		alert("You Lose");
		return true;

}


var onDragStart = function(source, piece, position, orientation) {
  if (game.in_checkmate() === true || game.in_draw() === true) {
    return false;
  }
};

var makeRandomMove = function() {
  var possibleMoves = game.moves();

  // game over
  if (possibleMoves.length === 0) {
    if (game.ultimo_blanco() === true){
      enviadatos_per();
    console.log("negros ganadores");
    }
    if (game.ultimo_negro() === true){
      enviadatos_gan();
    console.log("blancos ganadores");
    }

  return};

  var randomIndex = Math.floor(Math.random() * possibleMoves.length);
  game.move(possibleMoves[randomIndex]);
  board.position(game.fen());
};

var onDrop = function(source, target) {
  // see if the move is legal
  var move = game.move({
    from: source,
    to: target,
    promotion: 'q' // NOTE: always promote to a queen for example simplicity
  });

  // illegal move
  if (move === null) return 'snapback';

  // make random legal move for black
  window.setTimeout(makeRandomMove, 250);
};

// update the board position after the piece snap
// for castling, en passant, pawn promotion
var onSnapEnd = function() {
  board.position(game.fen());
};

var cfg = {
  draggable: true,
  position: 'start',
  onDragStart: onDragStart,
  onDrop: onDrop,
  onSnapEnd: onSnapEnd
};
board = ChessBoard('board', cfg);
//--- end example JS ---

}; // end init()
var init =  comienzo();
